{
  "name": "Delivery Dev Container",
  "dockerFile": "Dockerfile",
  "context": "..",
  "workspaceFolder": "/workspaces/delivery",
  "forwardPorts": [3000, 3001, 8080],
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "editor.formatOnSave": true
  },
  "extensions": [
    "Dart-Code.dart-code",
    "Dart-Code.flutter",
    "esbenp.prettier-vscode",
    "dbaeumer.vscode-eslint"
  ],
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  }
}
{
  "name": "Delivery App Development",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "npm install -g firebase-tools && sudo apt-get update && sudo apt-get install -y curl git unzip xz-utils zip libglu1-mesa",
  "postAttachCommand": {
    "server": "cd api && npm install && npm run dev",
    "flutter-setup": "git clone https://github.com/flutter/flutter.git -b stable /home/codespace/flutter && echo 'export PATH=\"$PATH:/home/codespace/flutter/bin\"' >> ~/.bashrc && source ~/.bashrc && flutter precache && flutter doctor"
  },
  "forwardPorts": [3000, 3001],
  "portsAttributes": {
    "3000": {
      "label": "Main API",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Mock API",
      "onAutoForward": "notify"
    }
  }
}